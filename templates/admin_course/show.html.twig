{% extends 'admin.html.twig' %}

{% block title %}Admin {{ course.name }}{% endblock %}

{% block body %}
    <h1 class="text-center">Parcours : {{ course.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ course.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ course.description }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ course.adress }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ course.phone }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ course.website }}</td>
            </tr>
            <tr>
                <th>Mise à jour</th>
                <td>{{ course.updatedAt ? course.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div>
        <div class="row">
            <a href="{{ path('app_admin_course_index') }}">Revenir à la liste</a>
        </div>
        <div class="row">
            <a href="{{ path('app_admin_course_edit', {'id': course.id}) }}"><i class="bi bi-pencil"></i></a>
        </div>
    </div>

    {{ include('admin_course/_delete_form.html.twig') }}
{% endblock %}
