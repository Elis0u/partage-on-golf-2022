{% extends 'admin.html.twig' %}

{% block title %}Admin {{ article.title }} - Partage ton golf {% endblock %}

{% block body %}
    <h1 class="text-center">Article Administration</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.content|raw }}</td>
            </tr>
            <tr>
                <th>Nom de l'image</th>
                <td>{{ article.imageName }}</td>
            </tr>
            <tr>
                <th>Crée le</th>
                <td>{{ article.createdAt ? article.createdAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Mis à jour</th>
                <td>{{ article.updatedAt ? article.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status de l'article</th>
                <td>{{ article.status }}</td>
            </tr>
        </tbody>
    </table>
    <div>
        <div class="row">
            <a title="revenir en arriere" href="{{ path('app_admin_article_index') }}"><i style="color: black" class="bi bi-skip-backward"></i></a>
        </div>
        <div class="row">
            <a title="editer" href="{{ path('app_admin_article_edit', {'id': article.id}) }}"><i style="color: black" class="bi bi-pencil"></i></a>
        </div>
    </div>

    {{ include('admin_article/_delete_form.html.twig') }}
{% endblock %}
