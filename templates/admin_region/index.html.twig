{% extends 'admin.html.twig' %}

{% block title %}Region index{% endblock %}

{% block body %}
    <h1>Region index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>InternalName</th>
                <th>Label</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for region in regions %}
            <tr>
                <td>{{ region.id }}</td>
                <td>{{ region.internalName }}</td>
                <td>{{ region.label }}</td>
                <td>
                    <a href="{{ path('app_admin_region_show', {'id': region.id}) }}">show</a>
                    <a href="{{ path('app_admin_region_edit', {'id': region.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_region_new') }}">Create new</a>
{% endblock %}
